generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//both originalUrl and newUrl shall be unique and  we take the url and shorten it with the help of some algorithm and save the mapping in the database
model Url {
  id Int @id @default(autoincrement())
  originalUrl String @unique
  newUrl String @unique
  createdAt DateTime @default(now())
  expired Boolean @default(false) 
}

